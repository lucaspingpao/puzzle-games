{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      }
    ],
    "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}  