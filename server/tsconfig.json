{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./api",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["api/**/*.ts"],
    "exclude": ["node_modules"]
}
  